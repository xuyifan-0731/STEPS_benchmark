{
    "name": "BookHotel",
    "description": "This API orders hotel rooms.",
    "parameters": [
        {
            "name": "username",
            "description": "User's username"
        },
        {
            "name": "password",
            "description": "User's password"
        },
        {
            "name": "hotel_name",
            "description": "The name of the hotel."
        },
        {
            "name": "check_in_time",
            "description": "The time to check in. Format: YYYY-MM-DD"
        },
        {
            "name": "check_out_time",
            "description": "The time to check out. Format: YYYY-MM-DD"
        },
        {
            "name": "room_count",
            "description": "The number of rooms to order."
        },
        {
            "name": "adult_count",
            "description": "The number of adults."
        },
        {
            "name": "child_count",
            "description": "The number of children."
        }
    ],
    "return": "The ID of the order.",
    "example": [
        {
            "input": {
                "username": "JohnDoe",
                "password": "pass123",
                "hotel_name": "Hilton",
                "check_in_time": "2023-09-13",
                "check_out_time": "2023-09-15",
                "room_count": 1,
                "adult_count": 2,
                "child_count": 0
            },
            "output": "1 room has been successfully booked at the Hilton Hotel from 2023-09-13 to 2023-09-15. The order ID is 11."
        }
    ]
}