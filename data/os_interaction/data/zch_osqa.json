[
    {
        "description": "Count the occurrences of each word appeared in /usr/words.txt and tell me the word with the highest occurrence. The file contains only lowercase characters and space characters. Words are seperated by at least one space character. If multiple words have the highest occurrence, tell me the alphabetically smallest one.",
        "create": {
            "local": "default",
            "init": {
                "file": "init/gen_words.sh"
            }
        },
        "evaluation": {
            "check": [
                null,
                {
                    "language": "python",
                    "file": "check/string-match.py"
                }
            ],
            "example": {
                "code": "tr -s ' ' '\\n' < /usr/words.txt | sort | uniq -c | sort -k 1,1nr | head -n 1 | awk '{print $2}'"
            }
        },
